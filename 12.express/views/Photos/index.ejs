<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1">
    <meta name="viewport" content="width=device-width,user-scalable=no">
    <meta name="author" content="CoderGLM">
    <meta name="description" content="express demo">
    <meta name="keywords" content"express;demo">
    <title><%= title %></title>
    <link href="/stylesheets/style.css" rel="stylesheet">
  </head>
  <body>
    <h1>Photos</h1>
    <p>Express stock photo application.</p>
    <div>
      <a href="/upload">upload</a>
      <a href="/removeall">remove all</a>
    </div>
    <div id="photos">
      <% photos.forEach(function (photo) { %>
        <figure class="photo">
          <figcaption><%= photo.name %></figcaption>
          <a href="/photo/<%=photo.id%>/download">
            <img src='<%= photo.path %>' width="100" height="150">
          </a>
        </figure>
      <% }) %>
    </div>
  </body>
</html>
